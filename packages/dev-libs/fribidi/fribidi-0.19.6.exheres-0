SUMMARY="An implementation of the Unicode Bidirectional Algorithm (bidi)"
DESCRIPTION="
A free software library that claims to implement a completly standard-compatible Unicode
Bidirectional algorithm.
"
HOMEPAGE="http://${PN}.org"
DOWNLOADS="${HOMEPAGE}/download/${PNV}.tar.bz2"

LICENCES="LGPL-2.1"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    build:
        virtual/pkg-config[>=0.9.0]
    build+run:
        dev-libs/glib:2
"

DEFAULT_SRC_PREPARE_PATCHES=( "${FILES}"/fribidi-test-ignore-COLUMNS.patch )

DEFAULT_SRC_CONFIGURE_PARAMS=(
    --with-glib=yes
    # make fribidi thread-safe
    # see https://bugs.freedesktop.org/show_bug.cgi?id=79385
    --enable-malloc
)

