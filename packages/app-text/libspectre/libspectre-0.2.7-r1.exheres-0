SUMMARY="A small library for rendering Postscript documents"
HOMEPAGE="http://${PN}.freedesktop.org"
DOWNLOADS="${HOMEPAGE}/releases/${PNV}.tar.gz"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="
    doc
"

DEPENDENCIES="
    build:
        doc? ( app-doc/doxygen )
    test:
        virtual/pkg-config
        x11-libs/cairo
    build+run:
        app-text/ghostscript[>=8.62]
"

DEFAULT_SRC_CONFIGURE_PARAMS=( --disable-static )
DEFAULT_SRC_CONFIGURE_TESTS=( '--enable-test --disable-test' )

src_compile() {
    default

    option doc && emake doc
}

src_install() {
    default

    if option doc ; then
        insinto /usr/share/doc/${PNVR}
        doins -r doc/html
    fi
}

